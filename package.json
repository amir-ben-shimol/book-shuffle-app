{
	"name": "book-shuffle",
	"description": "A mobile app for book lovers to discover new books and shuffle their reading list.",
	"author": "Amir Ben Shimol",
	"license": "MIT",
	"main": "expo-router/entry",
	"version": "1.0.0",
	"private": true,
	"keywords": [
		"book",
		"shuffle",
		"reading",
		"list",
		"discover",
		"expo",
		"react",
		"native",
		"goodreads"
	],
	"scripts": {
		"prepare": "run-s husky git:config onboarding",
		"husky": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"onboarding": "node ./src/lib/scripts/onboarding.cjs",
		"dev": "cross-env expo start",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"storybook": "cross-env EXPO_PUBLIC_STORYBOOK_ENABLED=true expo start",
		"storybook-generate": "sb-rn-get-stories",
		"build:preview": "eas build -p ios --profile preview",
		"build:dev": "eas build -p ios --profile development",
		"web": "expo start --web",
		"test:storybook": "jest",
		"knip": "knip",
		"inflint": "inflint -c ./inflint.config.cjs",
		"lint": "eslint -c ./.eslintrc.cjs --ignore-path ./.eslintignore \"./**/*.{ts,tsx,cjs}\"",
		"type-check": "tsc --project ./tsconfig.json"
	},
	"dependencies": {
		"@gorhom/bottom-sheet": "4.6.4",
		"@react-native-async-storage/async-storage": "1.24.0",
		"@react-native-picker/picker": "2.11.1",
		"axios": "1.7.9",
		"babel-preset-expo": "11.0.15",
		"clsx": "2.1.1",
		"expo": "~51.0.20",
		"expo-constants": "~16.0.2",
		"expo-dev-client": "~4.0.20",
		"expo-haptics": "13.0.1",
		"expo-image-picker": "15.1.0",
		"expo-linear-gradient": "13.0.2",
		"expo-linking": "~6.3.1",
		"expo-router": "~3.5.18",
		"expo-splash-screen": "0.29.22",
		"expo-status-bar": "~1.12.1",
		"react": "18.3.1",
		"react-native": "0.75.4",
		"react-native-confetti-cannon": "1.5.2",
		"react-native-gesture-handler": "~2.20.0",
		"react-native-htmlview": "0.17.0",
		"react-native-image-colors": "2.4.0",
		"react-native-modal": "13.0.1",
		"react-native-ratings": "7.3.0",
		"react-native-really-awesome-button": "2.0.4",
		"react-native-reanimated": "~3.10.1",
		"react-native-safe-area-context": "4.11.0",
		"react-native-screens": "3.34.0",
		"react-native-svg": "15.7.1",
		"react-native-vector-icons": "10.2.0",
		"react-native-xml2js": "1.0.3",
		"tailwind-merge": "2.5.3",
		"xml2js": "0.6.2",
		"zustand": "4.5.7"
	},
	"devDependencies": {
		"@babel/core": "^7.20.0",
		"@babel/preset-typescript": "7.27.1",
		"@exlint.io/inflint": "2.1.1",
		"@react-native-community/datetimepicker": "^8.2.0",
		"@react-native-community/slider": "^4.5.2",
		"@storybook/addon-ondevice-actions": "^7.6.20",
		"@storybook/addon-ondevice-controls": "^7.6.20",
		"@storybook/react": "8.5.8",
		"@storybook/react-native": "^7.6.20",
		"@testing-library/jest-native": "5.4.3",
		"@testing-library/react-native": "12.9.0",
		"@types/jest": "29.5.14",
		"@types/react": "~18.3.0",
		"@types/react-native-htmlview": "0.16.6",
		"@types/react-native-vector-icons": "6.4.18",
		"@types/xml2js": "0.4.14",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"babel-jest": "29.7.0",
		"babel-loader": "^9.0.0",
		"chalk": "5.6.0",
		"cnb": "1.2.4",
		"cross-env": "7.0.3",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.2",
		"eslint-plugin-deprecation": "3.0.0",
		"eslint-plugin-i18next": "6.1.3",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "4.6.2",
		"eslint-plugin-unicorn": "55.0.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"figlet": "1.8.2",
		"husky": "9.1.7",
		"jest": "^29.7.0",
		"jest-expo": "~51.0.3",
		"knip": "5.27.3",
		"lint-staged": "15.4.3",
		"nativewind": "2.0.11",
		"npm-run-all2": "6.2.6",
		"prettier": "3.5.1",
		"prettier-plugin-sh": "0.15.0",
		"prettier-plugin-tailwindcss": "0.6.14",
		"react-dom": "18.3.1",
		"tailwindcss": "3.3.2",
		"ts-jest": "29.2.5",
		"ts-mock-api": "1.0.13",
		"ts-node": "10.9.2",
		"typescript": "~5.6.0"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
